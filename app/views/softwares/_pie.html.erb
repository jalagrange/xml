<script type="text/javascript" charset="utf-8">
$(document).ready(function() {
   chart = new Highcharts.Chart({
      chart: {
         renderTo: '<%= div_pie %>',
         margin: [50, 200, 60, 170]
      },
      title: {
         text: 'Walltime por dia'
      },
      plotArea: {
         shadow: null,
         borderWidth: null,
         backgroundColor: null
      },
      tooltip: {
         formatter: function() {
            return '<b>'+ this.point.name +'</b>: '+ this.y +' %';
         }
      },
      plotOptions: {
         pie: {
            allowPointSelect: true,
            cursor: 'pointer',
            dataLabels: {
               enabled: true,
               formatter: function() {
                  if (this.y > 5) return this.point.name;
               },
               color: 'white',
               style: {
                  font: '13px Trebuchet MS, Verdana, sans-serif'
               }
            }
         }
      },
      legend: {
         layout: 'vertical',
         style: {
            left: 'auto',
            bottom: 'auto',
            right: '50px',
            top: '100px'
         }
      },
		
														
								
       series: [{
         type: 'pie',
         name: 'Browser share',
         data: [<% for job in @jobs_diarios %>
            	['<%= job.day %>',<%= job.walltime %>],
				<% end %>

         ]
      }]
   });
});
</script>